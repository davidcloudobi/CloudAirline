@model IEnumerable<AirLine.Modules.Class.Airline>

@{
    ViewBag.Title = "GetAll";
}

<h2>GetAll</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
@if (TempData["Message2"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message2"]
    </div>
}
else
{

}
<p class=" btn btn-primary text-white">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookingAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination)
            </td>
            <td>
                <span class="btn btn-warning text-white"> @Html.ActionLink("Edit", "Edit", new { id = item.Id })</span>
                <span class="btn btn-primary text-white">  @Html.ActionLink("Details", "Details", new { id = item.Id })</span>
                <span class="btn btn-danger text-white">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</span>
               
          
                
            </td>
        </tr>
    }

</table>
